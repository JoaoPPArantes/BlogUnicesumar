<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Últimos Posts do Blog</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <h1>Últimos Posts do Blog</h1>
    <% posts.forEach(function(post) { %>
    <div class="post">
      <div class="post-image">400 x 200</div>
      <h2><%= post.titulo %></h2>
      <p><%= post.descricao %></p>
      <a href="#">Leia mais sobre...</a>
    </div>
    <% }); %>
  </body>
</html>
